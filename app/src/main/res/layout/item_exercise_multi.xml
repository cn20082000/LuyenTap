<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_part_exercise_multi_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hjakgsdkhfhaksdhfakl"
        android:textSize="20sp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_exercise_multi_item"

        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_time_exercise_multi_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3.00 am - 11.00 am"
        android:textSize="14sp"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@id/tv_part_exercise_multi_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_exercise_multi_item"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_ex_exercise_multi_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView\nasdfkhagsdkfg\nahdgfjhasdg\nadsfasd"
        android:singleLine="false"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@id/tv_time_exercise_multi_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_exercise_multi_item"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btn_edit_exercise_multi_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        app:icon="@drawable/ic_edit"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/divider"

        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>